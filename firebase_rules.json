{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid",
        "sharedGames": {
          ".write": "auth != null"
        }
      }
    },
    "games": {
      ".read": "auth != null",
      "$gameId": {
        ".write": "auth != null && (newData.child('ownerId').val() == auth.uid || root.child('games').child($gameId).child('ownerId').val() == auth.uid)",
        "sharedWith": {
          "$userId": {
            ".write": "auth != null && auth.uid == $userId"
          }
        }
      }
    },
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}