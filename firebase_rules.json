{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid",
        "sharedGames": {
          ".write": "auth != null"
        }
      }
    },
    "games": {
      "$gameId": {
        ".read": "auth != null && (root.child('games').child($gameId).child('ownerId').val() == auth.uid || root.child('games').child($gameId).child('sharedWith').child(auth.uid).exists())",
        ".write": "auth != null && (newData.child('ownerId').val() == auth.uid || root.child('games').child($gameId).child('ownerId').val() == auth.uid)"
      }
    }
  }
}